<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/colorAccent</item>
        <item name="colorOnSurface">@color/colorAccent</item>
        <item name="colorError">@color/colorError</item>
        <item name="textInputStyle">@style/AppTheme.TextInputLayout</item>
        <item name="toolbarStyle">@style/AppTheme.Toolbar</item>
        <item name="materialButtonStyle">@style/AppTheme.Button</item>
        <item name="materialCardViewStyle">@style/AppTheme.CardView</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="AppTheme.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="titleTextAppearance">@style/AppTheme.TextAppearance.Headline6</item>
        <item name="subtitleTextAppearance">@style/AppTheme.TextAppearance.Subtitle1</item>
    </style>

    <style name="AppTheme.TextInputLayout" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="shapeAppearance">@style/AppTheme.ShapeAppearance.SmallComponent</item>
        <item name="hintTextColor">?attr/colorOnSurface</item>
        <item name="boxStrokeColor">?attr/colorOnSurface</item>
        <item name="startIconTint">?attr/colorOnSurface</item>
        <item name="textAppearanceSubtitle1">@style/AppTheme.TextAppearance.Subtitle1</item>
        <item name="textAppearanceCaption">@style/AppTheme.TextAppearance.Caption</item>
    </style>

    <style name="AppTheme.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/colorPrimary</item>
        <item name="cardCornerRadius">@dimen/dimen_8dp</item>
        <item name="elevation">@dimen/dimen_8dp</item>
        <item name="shapeAppearanceMediumComponent">@style/AppTheme.ShapeAppearance.MediumComponent</item>
    </style>

    <style name="AppTheme.TextAppearance.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/rubik</item>
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="AppTheme.TextAppearance.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/rubik</item>
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="AppTheme.TextAppearance.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/rubik</item>
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="AppTheme.TextAppearance.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/rubik</item>
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/AppTheme.TextAppearance.Headline6</item>
        <item name="shapeAppearance">@style/AppTheme.ShapeAppearance.SmallComponent</item>
    </style>

    <style name="AppTheme.ShapeAppearance.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">6dp</item>
    </style>

    <style name="AppTheme.ShapeAppearance.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>
</resources>
