<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_180dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/constellation_background"
    android:gravity="bottom|center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/dimen_16dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/farmerProfilePhoto"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:scaleType="fitCenter"
        android:src="@drawable/camera"
        app:riv_border_color="@color/colorAccent"
        app:riv_border_width="2dp"
        app:riv_corner_radius="50dp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/farmerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dimen_8dp"
        android:text="@string/nav_header_title"
        android:textAppearance="@style/AppTheme.TextAppearance.Caption"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/farmerEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nav_header_subtitle"
        android:textAppearance="@style/AppTheme.TextAppearance.Caption" />

</LinearLayout>
